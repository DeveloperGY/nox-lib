#ifndef NOX_MATH_VEC_HPP
#define NOX_MATH_VEC_HPP

namespace nox
{
    template <class _Type>
    struct vec2
    {
        _Type x;
        _Type y;
    };

    template <class _Type>
    struct vec3
    {
        _Type x;
        _Type y;
        _Type z;
    };

    template <class _Type>
    struct vec4
    {
        _Type x;
        _Type y;
        _Type z;
        _Type w;
    };
}

#endif