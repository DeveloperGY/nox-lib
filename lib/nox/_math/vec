#ifndef NOX_MATH_VEC_HPP
#define NOX_MATH_VEC_HPP

namespace nox
{
    template <class _Tp>
    struct vec2
    {
        _Tp x;
        _Tp y;
    };

    template <class _Tp>
    struct vec3
    {
        _Tp x;
        _Tp y;
        _Tp z;
    };

    template <class _Tp>
    struct vec4
    {
        _Tp x;
        _Tp y;
        _Tp z;
        _Tp w;
    };
}

#endif