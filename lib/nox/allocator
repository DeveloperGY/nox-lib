#ifndef NOX_ALLOCATOR_HPP
#define NOX_ALLOCATOR_HPP

#include "exception"

#include <cstddef>
#include <cstdlib>

namespace nox
{
    template<class _Tp = char>
    class allocator
    {
        private:

        public:
            virtual _Tp *allocate(std::size_t __n);
            virtual void deallocate(_Tp *__ptr);
    };
}

#include "_tcc/allocator.tcc"


#endif