#ifndef NOX_VECTOR_HPP
#define NOX_VECTOR_HPP

#include "allocator"

#include <cstddef>

namespace nox
{
    template <class _Tp, class _Al = nox::allocator<_Tp>>
    class vector
    {
        private:
            std::size_t _M_capacity;
            std::size_t _M_size;
            _Tp *_M_elems;
        
        public:
            constexpr vector();
            ~vector() noexcept;
    };
}

#include "_tcc/vector.tcc"

#endif